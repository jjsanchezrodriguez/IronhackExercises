<!DOCTYPE html>
<html>
<head>
  <title>MusicConcertNetwork</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render "header" %>
<div class="container">
    <%= flash_messages %>
    <%= yield %>
</div>
<div style="height: 50px"></div>

<% if Rails.env.development? %>
    <div style="margin-bottom: 200px; padding: 8px; background-color: #eee">
        <%= params %>
    </div>
<% end %>
<%= render "footer" %>

</body>
</html>
