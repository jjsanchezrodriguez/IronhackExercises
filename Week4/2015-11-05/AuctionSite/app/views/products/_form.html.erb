<%= button_name = product.persisted? ? "Edit product" : "Create a product" %>

<%= form_for [user, product] do |f| %>
    <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
    </div>
    <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
    </div>
    <div>
    <%= f.label :deadline %>
    <%= f.datetime_select :deadline %>
    </div>
    <div>
    <%= f.submit "Create" %>
    </div>
<% end %>
