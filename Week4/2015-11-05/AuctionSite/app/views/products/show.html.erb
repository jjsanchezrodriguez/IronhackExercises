<h1><%= @product.title %></h1>

<div class="product-item">
    <p><b>Description</b></p>
    <p><%= @product.description %></p>
    <p><b>Deadline</b></p>

    <% if DateTime.now < @product.deadline %>

        <p><%= @product.deadline %></p>

        <p><b>New bid</b></p>
        <%= form_for [@user, @product, @bid] do |f| %>
            <div>
            <%= f.label "Bidder email" %>
            <%= email_field_tag :email %>
            </div>
            <div>
                <%= f.label :amount %>
                <%= f.number_field :amount, :step => 0.01 %> $
            </div>
            <div>
                <%= f.submit "Bid" %>
            </div>
        <% end %>
    <% else %>
        <p><%= "Auction ended." %></p>
    <% end %>

    <% if @product.bids.any? %>
        <p><b>Bids</b></p>
        <ul>
            <% @product.bids.each do |bid| %>
                <li>
                    <p><b>Username</b>
                        <%= bid.user.name %>
                    </p>
                    <p><b>Amount</b>
                        <%= bid.amount %>$ 
                    </p>
                    <p><b>Time</b>
                        <%= bid.created_at %>
                    </p>
                </li>
            <% end %>
        </ul>
    <% end %>

</div>

<%= link_to "Back to products", user_products_path(params[:user_id]) %>
